@model Products
<div class="row">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-md-4 ">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span><br/>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control"/>
    </div>
    <div class="col-md-4">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span><br/>
        <label asp-for="Image"></label>
        <div class="row g-3">
            <div class="col">
                <input asp-for="Image" class="form-control" oninput="previewImage(event)" id="inputSrc"/>
            </div>
            <div class="col">
                <img id="imgPreviewer" width="75" alt="..."/>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-check">
            <label asp-for="isDiscount" class="form-check-label"></label>
            <input asp-for="isDiscount" class="form-check-input" id="checkBoxDiscount"/>

        </div>
        <label asp-for="Discount"></label>
        <input asp-for="Discount" class="form-control" id="inputDiscount"/>

    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.DanhMuc" >
            <option value="">-Chọn danh mục-</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span><br/>
    </div>
</div>