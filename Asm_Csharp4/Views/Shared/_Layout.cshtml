@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="icon" href="favicon.png" type="image/png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/css/all.css" rel="stylesheet" />
    <script src="~/js/all.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light bg-gradient sticky-md-top py-2">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.jpg" class="rounded-circle" width="30" /><span class="text-danger"> Phạm Việt</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-grow-1 justify-content-center">

                    <li class="nav-item px-3">
                        <a class="nav-link " aria-current="page" asp-controller="Home" asp-action="Index" title="Trang chủ">
                            <img src="~/icons/house.svg" width="30" />
                        </a>
                    </li>

                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" title="Quản lý sản phẩm">
                            <img src="~/icons/bag.svg" width="30" alt="" />
                        </a>
                    </li>

                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Category" asp-action="Index" title="Quản lý danh mục">
                            <img src="~/icons/list-ol.svg" width="30" alt="" />
                        </a>
                    </li>

                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Customer" asp-action="Index" title="Quản lý người dùng">
                            <img src="~/icons/person.svg" width="30" alt="" />
                        </a>
                    </li>
                </ul>

                <span class="d-flex">
                    <a class="nav-link link-dark" asp-controller="Cart" asp-action="Index">
                        <img src="~/icons/cart4.svg" width="30" alt="" />
                    </a>
                </span>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
