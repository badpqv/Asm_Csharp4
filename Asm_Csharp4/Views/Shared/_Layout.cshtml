@using System.Net.Http
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="icon" href="~/images/azusa.png" type="image/png" />
    @*<----------------------------------Bootstrap------------------>*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<------------Font Awesome------------>*@
    <link href="~/css/all.css" rel="stylesheet" />
    <script src="~/js/all.js"></script>
    @*<------------Custom--------------------------->*@
    <link href="~/css/customstyle.css" rel="stylesheet" />
</head>
<body>
    <header class=" justify-content-end">
        <nav class="navbar navbar-expand-md navbar-light bg-light bg-gradient py-2 ms-auto text-end ">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.jpg" class="rounded-circle" width="30"/><span class="text-danger"> Azs Shop</span>
            </a>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-end d-flex">
                <li class="nav-item">
                    <span class="text-info">
                        <a class="nav-link" href="#">@Context.Session.GetString("Login")</a>
                    </span>
                </li> |
                <li class="nav-item">
                    <span>
                        <a class="nav-link" asp-controller="Account" asp-action="Index">
                            Đăng xuất
                        </a>
                    </span>
                </li>
            </ul>
        </nav>
    </header>
<nav class="navbar navbar-expand-md navbar-light bg-light bg-gradient sticky-md-top py-2">
    <div class="container-fluid">
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-grow-1 justify-content-center">

                <li class="nav-item px-4">
                    <a class="nav-link " aria-current="page" asp-controller="Home" asp-action="Index" title="Trang chủ">
                        <img src="~/icons/house.svg" width="30"/>
                    </a>
                </li>

                <li class="nav-item px-4">
                    <a class="nav-link" asp-controller="Product" asp-action="Index" title="Quản lý sản phẩm">
                        <img src="~/icons/bag.svg" width="30" alt=""/>
                    </a>
                </li>

                <li class="nav-item px-4">
                    <a class="nav-link" asp-controller="Category" asp-action="Index" title="Quản lý danh mục">
                        <img src="~/icons/list-ol.svg" width="30" alt=""/>
                    </a>
                </li>

                <li class="nav-item px-4">
                    <a class="nav-link" asp-controller="Customer" asp-action="Index" title="Quản lý người dùng">
                        <img src="~/icons/person.svg" width="30" alt=""/>
                    </a>
                </li>
            </ul>
            <span class="d-flex">
                <a class="nav-link link-dark" asp-controller="Cart" asp-action="Index" title="Giỏ hàng">
                    <img src="~/icons/cart4.svg" width="30" alt=""/>
                </a>
            </span>
        </div>
    </div>
</nav>
<div class="container-fluid">
    <main>
        @RenderBody()
    </main>
</div>
<footer class="text-center text-uppercase text-dark py-3 border-dark bg-light mt-auto">
    <span>
        &copy; by Phạm Việt - @DateTime.Now.Year
    </span>
</footer>
<script src="~/js/site.js"></script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
