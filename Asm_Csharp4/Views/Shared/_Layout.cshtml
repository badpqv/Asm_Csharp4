@using System.Net.Http
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="icon" href="~/images/haxxor.png" type="image/png" />
    <!----------------------------------Bootstrap------------------>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!------------Custom--------------------------->
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/fa-css/all.css" rel="stylesheet" />
    <link href="~/css/details.css" rel="stylesheet" />
    <!--Script-->
    <script src="~/js/site.js"></script>
    <script src="~/js/main.js"></script>
</head>
<body onload="previewImage(event)">
    <header class=" justify-content-end">
        <nav class="navbar navbar-expand-lg navbar-light bg-light bg-gradient py-2 ms-auto ">
            <a class="navbar-brand" href="#">
                <img src="~/images/haxxor.png" class="rounded-circle avatar me-2" width="30" alt="..." /><span class="text-danger">HB Shop</span>
            </a>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 float-lg-end float-sm-start justify-content-sm-start justify-content-end">
                <li class="nav-item">
                    <span>
                        <a href="#" class="nav-link link-primary">@Context.Session.GetString("Login")</a>
                    </span>
                </li> |
                <li class="nav-item">
                    <span>
                        <a class="nav-link link-dark" asp-controller="Account" asp-action="Login">
                            Đăng xuất
                        </a>
                    </span>
                </li>
            </ul>
        </nav>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light bg-gradient sticky-md-top py-2 ms-auto">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-grow-1 justify-content-center">

                    <li class="nav-item px-4">
                        <a class="nav-link " aria-current="page" asp-controller="Home" asp-action="Index" title="Trang chủ">
                            <img src="~/icons/house.svg" width="30" />
                        </a>
                    </li>

                    <li class="nav-item px-4">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" title="Quản lý sản phẩm">
                            <img src="~/icons/bag.svg" width="30" alt="" />
                        </a>
                    </li>

                    <li class="nav-item px-4">
                        <a class="nav-link" asp-controller="Category" asp-action="Index" title="Quản lý danh mục">
                            <img src="~/icons/list-ol.svg" width="30" alt="" />
                        </a>
                    </li>

                    <li class="nav-item px-4">
                        <a class="nav-link" asp-controller="Customer" asp-action="Index" title="Quản lý người dùng">
                            <img src="~/icons/person.svg" width="30" alt="" />
                        </a>
                    </li>
                </ul>
                <span class="d-flex">
                    <a class="nav-link link-dark" asp-controller="Cart" asp-action="Index" title="Giỏ hàng">
                        <img src="~/icons/cart4.svg" width="30" alt="" />
                    </a>
                </span>
            </div>
        </div>
    </nav>
<main class="flex-shrink-0">
    <div class="container-fluid">
            @RenderBody()
    </div>
</main>
    <footer class="text-center text-uppercase text-muted py-3 border-dark bg-light mt-auto footer">
        <span>
            &copy; by Phạm Việt - @DateTime.Now.Year
        </span>
    </footer>

    <script src="~/fa-js/all.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
