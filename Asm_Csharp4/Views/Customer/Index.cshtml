@{
    ViewData["Title"] = "Index - QLND";
    ViewData["Icon"] = "/icons/person.svg";
}
@model IEnumerable<Customers>
<h1 class="display-4 text-center text-danger">Quản lý người dùng</h1>
<a asp-action="Create" class="btn btn-outline-info">Thêm người dùng mới</a>
<hr/>
<table class="table table-bordered  align-middle text-center text-wrap  border-info">
    <thead class="table-info">
    <tr>
        <th>@Html.DisplayNameFor(model=>model.FullName)</th>
        <th>@Html.DisplayNameFor(model=>model.Email)</th>
        <th>@Html.DisplayNameFor(model=>model.SDT)</th>
        <th>@Html.DisplayNameFor(model=>model.CmndCccd)</th>
        <th>@Html.DisplayNameFor(model=>model.Address)</th>
        <th>@Html.DisplayNameFor(model=>model.Username)</th>
        <th>@Html.DisplayNameFor(model=>model.Quyen)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody class="align-middle">
    @{
        foreach (var item in Model)
        {
            <tr class="fw-bolder">
                <td class="text-info">@Html.DisplayFor(model=>item.FullName)</td>
                <td class="text-danger">@Html.DisplayFor(model=>item.Email)</td>
                <td class="text-success">@Html.DisplayFor(model=>item.SDT)</td>
                <td class="text-success">@Html.DisplayFor(model=>item.CmndCccd)</td>
                <td class="text-success">@Html.DisplayFor(model=>item.Address)</td>
                <td class="text-success">@Html.DisplayFor(model=>item.Username)</td>
                <td class="text-info fst-italic">@Html.DisplayFor(model=>item.Quyen)</td>
                <td class="align-middle">
                    <a asp-action="Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" class="btn btn-outline-success btn-sm" asp-route-id="@item.Id">Sửa TT người dùng</a>
                    <a asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-id="@item.Id">Xoá người dùng</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>