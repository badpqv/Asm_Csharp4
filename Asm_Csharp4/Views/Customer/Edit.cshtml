@model Customers
@{
    ViewData["Title"] = "Edit - QLND";
}
<h1 class="text-danger">Edit</h1>
<h3 class="text-info">Sửa TT người dùng</h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger" required></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" required/>
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaiKhoan"></label>
                <input asp-for="TaiKhoan" class="form-control" required/>
                <span asp-validation-for="TaiKhoan"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau"></label>
                <input asp-for="MatKhau" class="form-control" required/>
                <span asp-validation-for="MatKhau"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quyen"></label>
                <input asp-for="Quyen" class="form-control" list="datalistOptions" required/>
                <datalist id="datalistOptions">
                    <option value="Người dùng" />
                    <option value="Admin" />
                </datalist>
                <span asp-validation-for="Quyen"></span>
            </div>
            <br/>
            <input type="submit" value="Cập nhật" class="btn btn-primary"/><br/>
            <a asp-action="Index">Back to list  </a>
        </form>
    </div>
</div>