@model IEnumerable<Carts>
@{
    ViewData["Title"] = "Cart";

}
<h1 class="text-center text-danger">Giỏ hàng</h1>
<br />
<hr />
<div class="container">
    @{
        
        if (Model.Any())
        {
            <table class="table table-bordered align-middle text-center table-responsive-lg">
                <thead>
                <tr>
                    <th>Actions</th>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>Thành tiền</th>
                </tr>
                </thead>
                <tbody>

                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Remove" class="btn btn-outline-danger" asp-route-id="@item.Id">Remove</a>
                            </td>
                            <td>@Html.DisplayFor(model => item.ProductName)</td>
                            <td>@Html.DisplayFor(model => item.Price)</td>
                            <td>
                                    <input asp-for="@item.Quantity" class="form-control form-control-sm w-25" value="@item.Quantity" min="0" name="quantity"/>
                            </td>
                            <td>@(item.Price * item.Quantity)</td>
                        </tr>
                    }
                }
                <tr class="text-end">
                    <td colspan="4">Tổng tiền</td>
                    <td>@ViewBag.total</td>
                </tr>
                </tbody>
            </table>
        }
        else
        {
<div class="row">
    <span class="alert alert-danger text-center" role="alert">Giỏ hàng trống</span>
</div>
        }
    }
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <a class="btn btn-primary" asp-action="Checkout">Thanh toán</a>
        </div>
        <div class="col-sm-2">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Tiếp tục mua sắm</a>
        </div>
    </div>
</div>