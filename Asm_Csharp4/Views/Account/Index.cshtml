@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}
@model Customers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/azusa.png" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/log.css" rel="stylesheet" />
</head>
<body>
    <div class="container login-container mt-5 align-items-center border-dark rounded">
        <h1 class="display-6 text-info text-danger text-center">Đăng nhập</h1>
        <p class="text-center">Đăng nhập bằng tài khoản Azs</p>
        <form asp-action="Login" autocomplete="off">
            <div class="row  justify-content-center">
                <div class="col-md-6 mb-5">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" name="user" />
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" name="password" />
                </div>
                <span class="text-danger">@Html.Raw(@TempData["Error"])</span>
            </div>
            <div class="row justify-content-end py-0">
                <div class="col-md-6 mb-5">
                    <input type="submit" class="btn btn-outline-danger" value="Đăng nhập" />
                </div>
            </div>
        </form>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>
