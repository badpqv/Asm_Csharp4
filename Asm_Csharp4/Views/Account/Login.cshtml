@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}
@model Customers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/azusa.png" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/all.css" rel="stylesheet" />
</head>
<body>
<div class="login-container">
    <img src="~/images/haxxor.png" class="rounded img-thumbnail" width="70" alt="..."/>
    <h1 class="text-center">Đăng nhập</h1>
    <p class="text-black-50">@@iefnaY</p>
    <form asp-action="Login" autocomplete="off">
        <div class="input-field">
            <input asp-for="Username" name="user" required>
            <label asp-for="Username"></label>
        </div>
        <div class="input-field">
            <input asp-for="Password" name="password" required>
            <label asp-for="Password"></label>
        </div>
        <div class="button">
            <div class="inner">
            </div>
            <input type="submit" class="btn btn-primary" value="Đăng nhập"/>
        </div>
        <div>
            @Html.Raw(@TempData["Error"])
        </div>
    </form>
 
</div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/all.js"></script>
</body>
</html>
